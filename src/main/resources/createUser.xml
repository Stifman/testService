<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1432" author="alewa">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="db" tableName="T_USER"/>
            </not>
        </preConditions>

        <createTable tableName="T_USER">
            <column name="F_ID" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="F_NAME" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="F_SECOND_NAME" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="F_EMAIL" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="F_ROLE" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="T_USER" columnName="F_ID" columnDataType="BIGINT" incrementBy="1"/>

        <insert tableName="T_USER">
            <column name="F_NAME">stepan</column>
            <column name="F_SECOND_NAME">Korchevskij</column>
            <column name="F_EMAIL">korstepan@yandex.by</column>
            <column name="F_ROLE">guest</column>
        </insert>
        <insert tableName="T_USER">
            <column name="F_NAME">pavel</column>
            <column name="F_SECOND_NAME">korchevskij</column>
            <column name="F_EMAIL">pasha@yandex.by</column>
            <column name="F_ROLE">admin</column>
        </insert>

        <rollback>
            DELETE TABLE T_USER
        </rollback>

    </changeSet>
</databaseChangeLog>